<?xml version="1.0" encoding="UTF-8"?> 

 <widget xmlns ="http://www.w3.org/ns/widgets"
   xmlns:gap = "http://phonegap.com/ns/1.0"
   id = "com.phonegap.example10"
   version = "1.0.0">
   
  <name> app9 Geolocalizacion</name>
  
  <description>
   Muestra la ubicacion del dispositivo de acuerdo al GPS
  </description>
  
  <author href="https://build.phonegap.com" email="clarita.com">
   Clara Vanessa Camacho Tlatelpa  4 E 
  </author>
  
  <!--Perzonaliza la aplicacion y la plataforma -->
  <preference name="orientacion" value="default"/>
  <!--<preference name="orientacion" value="landscape" /> 
  <preference name="orientacion" value="landscape" /> -->
  <preference name="target-device" value="universal" />
  <preference name="fullscreen" value="true" />
  <preference name="android-installLocation" value="auto" />
  <preference name="loadUrlTimeoutValue" value="700000" />
  <preference name="permissions" value="INTERNET" />
  
  <!--Plugins -->
  <!-- Core plugins -->
<plugin name="cordova-plugin-device" spec="~1.1.4" />
 <plugin name="cordova-plugin-vibration" spec="~2.1.3" />
 <plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
 
  <plugin name="cordova-plugin-geolocation" source="npm" /> 
  <!-- Third part plugins -->
 
 <!--Para accesar a paginas en internet-->
 <allow-intent href="https://*/*"/> 
 <acces origin="https://*/*"/>
 <allow-intent href="http://*/*"/>
 <plugin name="cordova-plugin-whitelist" source="npm"/>
 
  <!-- Colocar icono app -->
  
 <icon src="res/android/mdpi-4.png" />
 </widget> 
  
 

